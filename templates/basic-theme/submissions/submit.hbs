<div ng-app ng-init="submission.twittername='@';">
  {{#if responseToInterest}}
    <div class="respond-to-interest">
      {{responseToInterest.title}}
    </div>
  {{/if}}
  <form method="POST" action="/{{type}}/" name="form" role="form" novalidate>
    <div class="form-group">
      <label for="title">Title</label>
      <input ng-required="true" ng-model="submission.title" name="title" class="form-control">
    </div>

    <div class="form-group">
      <label for="name">Your name</label>
      <input ng-required="true" ng-model="submission.name" name="name" class="form-control">
    </div>

    <div class="form-group">
      <label for="twittername">Twitter username (optional)</label>
      <input ng-required="false" ng-model="submission.twittername" name="twittername" class="form-control">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea ng-required="true" ng-minlength="10" ng-model="submission.description" name="description" class="form-control"></textarea>
    </div>

    {{#if responseToInterest}}
      <input name="interest" type="hidden" value="{{responseToInterest._id}}"></input>
    {{/if}}

    <button class="btn btn-primary" ng-disabled="form.$invalid">Submit</button>
  </form>

</div>

<script src="/static/bower_components/angular/angular.js"></script>
